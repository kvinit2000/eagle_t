<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss.SSS}] %-5level %c{1.} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- turn this to DEBUG while debugging -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
        <!-- optional: per-package fine-grained logging -->
        <Logger name="com.eagle" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
